source 'https://rubygems.org'
ruby "2.0.0"
group :development, :test do
  gem 'openstack'
  gem 'nova'
  gem 'net-ssh-simple'
  gem 'rubyzip'
  gem 'rake'
  gem 'puppetlabs_spec_helper', :require => false
